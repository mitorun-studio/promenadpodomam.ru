	<div class="route-5 mb-l">
		<p class="route-4__text">{{ route5.text }}</p>
	</div>




	<div class="before-after">
		<div class="before-after__img">
			<!--<p class="before-after__img-desc">Современная карта Красноярска</p>-->
			<img width="1300" height="600" src="/img/map-new.png" alt="Новая карта Красноярска 2023г.">
		</div>

		<div class="before-after__img before-after__img--before">
