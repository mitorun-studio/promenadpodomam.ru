<!-- Вопросы и ответы: -->
<section class="section container">
	<h2 class="h2" id="faq">{{ faq.heading }}</h2>


	<div class="faq-grid">
		<ul class="uk-accordion" data-uk-accordion="multiple: true">
			{% for item in faq.list %}
			<li class="uk-accordion__card">
				<a class="uk-accordion-title" href>{{ item.title }}</a>
				<div class="uk-accordion-content">
					<p>{{ item.text }}</p>
				</div>
			</li>
			{% endfor %}
		</ul>


		<img class="faq-grid__img" width="300" height="400" src="{{ faq.img }}" alt="{{ faq.alt }}">
	</div>
</section>




