---
layout: _page-base.njk
---

<!-- Первый экран: -->
<section class="section-firstscreen">
	<div class="hero container">
		<div class="hero__img">
			<img fetchpriority="high" width="300" height="150" src="{{ firstscreen.img }}" alt="{{ firstscreen.alt }}">

			<button class="hero__audio audio" type="button" data-soundist="{{ firstscreen.audio }}" data-pause data-volume="20" aria-label="Аудио-приветствие">
				{% include "_block-audio-svg.njk" %}
				<!--<svg class="audio__svg" aria-hidden="true">
					<use href="/img/sprite.svg#audio"></use>
				</svg>-->
			</button>
		</div>

		<!-- <h1 class="hero__h1">Городской аудиоспектакль <span class="hero__h1-cursive">В трёх частях</span></h1> -->
		<h1 class="hero__h1">{{ firstscreen.heading | safe }}</h1>

		<p class="hero__subtitle mb-s">{{ firstscreen.text }}</p>

		<div class="hero__buttons">
			<a class="button" target="_blank" rel="noopener" href="{{ _site.whatsapp }}">{{ firstscreen.buttonText }}</a>

			<a class="button button--2" target="_blank" rel="noopener" href="{{ _site.telegramPhotos }}">{{ firstscreen.button2Text | safe }}</a>
		</div>
	</div>


	<div class="section-facts container reverse-colors">
		<ul class="facts">
			{% for item in firstscreen.facts %}
			<li class="facts__card">
				<span class="facts__big">{{ item.big }}</span>
				<span class="facts__text">{{ item.text }}</span>
			</li>
			{% endfor %}
		</ul>
	</div>
</section>




<!-- Расписание: -->
<section class="section container">

	<h2 class="h2" id="schedule">{{ schedule.heading }}</h2>

	<p class="subtitle">{{ schedule.text }}</p>


	<ul class="schedule">
		{% for item in schedule.cards %}
		<li class="schedule__card">
			<div class="schedule__rounding"></div>

			<img class="schedule__img" src="{{ item.img }}" alt="{{ item.alt }}">

			<div class="schedule__content">
				<h3 class="schedule__title">{{ item.title | safe }}</h3>
				<p class="schedule__text">{{ item.text | safe }}</p>
				<div class="schedule__box">
					<p class="schedule__price">{{ item.price }}</p>
					<a class="schedule__button-2" href="{{ item.link2 }}">{{ item.button2 }}</a>
				</div>
				<a class="schedule__button" target="_blank" rel="noopener" href="{{ _site.whatsapp }}">{{ item.button }}</a>
			</div>
		</li>
		{% endfor %}
	</ul>
</section>




<!-- Описание маршрутов: -->
<section class="section container">
	<h2 class="h2" id="routes">{{ routes.heading }}</h2>


	<div class="statement">
		<p class="statement__text">{{ routes.text }}</p>
		<img class="statement__img" width="70" height="70" src="/img/author.jpg" alt="Лицо автора променада">
		<p class="statement__author">{{ routes.author | safe }}</p>
	</div>


	<!-- Маршрут №1 Центр: -->
	<h3 class="h2" id="route1">{{ route1.heading }}</h3>
	<p class="mb-s">{{ route1.text }}</p>
	<div class="route mb-l">
		<div class="route__content">
			<p class="route__title">{{ route1.title }}</p>
			<p class="route__list">
				{% for item in route1.list %}
				{{ item.text + ' – ' }}<em>{{ item.name }}</em><br>
				{% endfor %}
			</p>
		</div>

		<div class="route__media">
			<div class="uk-slider uk-slider--pictures" data-uk-slider="">
				<div class="uk-slider-container">
					<ul class="uk-slider-items pictures">
						{% for item in route1.slider %}
						<li class="pictures__card">
							<img width="630" height="420" src="{{ item.img }}" alt="">
						</li>
						{% endfor %}
					</ul>
				</div>

				<a class="uk-slider-left" href data-uk-slider-item="previous"></a>
				<a class="uk-slider-right" href data-uk-slider-item="next"></a>

				<!-- Автоматическое создание пагинации: -->
				{# <ul class="uk-slider-nav"></ul> #}
			</div>


			<div class="route__audio">
				<button class="audio" type="button" data-soundist="{{ route1.audio }}" data-pause data-volume="27" aria-labelledby="voice-1">
					{% include "_block-audio-svg.njk" %}
				</button>

				<p id="voice-1">{{ route1.audioText }}</p>
			</div>
		</div>
	</div>




