{
	"name": "mitosite",
	"version": "1.0.0",
	"description": "",
	"keywords": [],
	"author": "Oleg Mitorun",
	"license": "ISC",
	"main": "eleventy.config.js",
	"scripts": {
		"start": "rm -rf site && npx @11ty/eleventy --serve --quiet",
		"eleventy": "rm -rf site && npx @11ty/eleventy --quiet",
		"eleventysharp": "node sharp ./src/img/ ./site/img/",
		"eleventysvgo": "node svgo ./site/ ./site/",
		"eleventytypograf": "node typograf.js ./site/",
		"eleventypurgecss": "npx purgecss --css ./site/**/*.css --content ./site/**/*.html ./site/**/*.js --config ./purgecss.config.js --output ./site/",
		"eleventybrowsersync": "npx browser-sync start --server ./site --files ./site",
		"build": "npm run eleventy && npm run eleventysharp && npm run eleventysvgo && npm run eleventytypograf   ",
		"prod": "npm run eleventy && npm run eleventysharp && npm run eleventysvgo && npm run eleventytypograf   && npm run eleventybrowsersync",
		"pr": "bash plugins.sh prettier",
		"sl": "bash plugins.sh stylelint",
		"el": "bash plugins.sh eslint",
		"ys": "bash plugins.sh yaspeller",
		"ec": "bash plugins.sh editorconfig-checker",
		"w3c": "bash plugins.sh node-w3c-validator",
		"vj": "bash plugins.sh vnu-jar",
		"bem": "bash plugins.sh bem-validate",
		"hh": "bash plugins.sh htmlhint",
		"hv": "bash plugins.sh html-validate",
		"test": "npm-run-all -s -c pr sl el ys ec w3c vj bem hh hv",
		"testfull": "npm run pr && npm run sl && npm run el && npm run ys && npm run ec && npm run w3c && npm run vj && npm run bem && npm run hh && npm run hv",
		"bs": "bash plugins.sh browser-sync",
		"sharp": "bash plugins.sh sharp",
		"sharp-webp": "bash plugins.sh sharp-webp",
		"sharp-avif": "bash plugins.sh sharp-avif",
		"tg": "bash plugins.sh typograf",
		"svgo": "bash plugins.sh svgo",
		"favicon": "bash plugins.sh cli-real-favicon",
		"font": "bash plugins.sh ttf2woff2",
		"blc": "bash plugins.sh broken-link-checker",
		"pc": "bash plugins.sh purgecss"
	},
	"browserslist": [
		"last 3 version",
		"> 0.3%",
		"not dead",
		"not ie <= 11",
		"iOS >= 14"
	],
	"devDependencies": {
		"@11ty/eleventy": "^2.0.1",
		"@11ty/eleventy-navigation": "^0.3.5",
		"@11ty/eleventy-plugin-bundle": "^1.0.5",
		"@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
		"@11tyrocks/eleventy-plugin-lightningcss": "^1.3.0",
		"browser-sync": "^3.0.2",
		"eleventy-plugin-external-links": "^1.1.2",
		"esbuild": "^0.20.2",
		"html-minifier-terser": "^7.2.0",
		"js-yaml": "^4.1.0",
		"markdown-it": "^14.1.0",
		"markdown-it-scrolltable": "^0.1.6",
		"npm-run-all": "^4.1.5",
		"pretty-data": "^0.40.0",
		"purgecss": "^5.0.0",
		"sharp": "^0.33.3",
		"svgo": "^3.2.0",
		"typograf": "^7.4.0"
	}
}
